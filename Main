class Deck:
  def __init__(self, numberOfPlayers):
    self.numberOfPlayers = numberOfPlayers
  
    def heart(self): # change so makes whole deck. Nested for statment using list of names?
      print("Called")
      hearts = []
      for i in range(1, 12):
        if i == 1:
          hearts.append("Heart - Ace")
        elif i > 1 and i < 11:
          i = str(f'Heart - {i}')
          hearts.append(i)
        else:
          hearts.extend(("Heart - Jack", "Heart - Queen", "Heart - King"))
      print(hearts)
    

game = Deck("1")
game.heart
